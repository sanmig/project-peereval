<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\UserMain" table="user_main" repository-class="AppBundle\Repository\UserMainRepository">
    <unique-constraints>
      <unique-constraint name="username" columns="username"/>
      <unique-constraint name="email" columns="email"/>
    </unique-constraints>
    <id name="id" type="bigint" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="password" type="string" column="password" length="60" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="firstname" type="string" column="firstName" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastname" type="string" column="lastName" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="role" type="string" column="role" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isverified" type="smallint" column="isVerified" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="verifycode" type="string" column="verifyCode" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="registerat" type="datetime" column="registerAt" nullable="true"/>
  </entity>
</doctrine-mapping>
